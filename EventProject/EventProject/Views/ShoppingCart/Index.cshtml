@model EventProject.Models.ShoppingCartViewModel
@{
    ViewBag.Title = "Shopping Cart";
}


<h2>Orders</h2>
<br />
<div id="update-message"></div>

<div>
    <table>
        <tr>
            <th>Title</th>
            <th>Tickets</th>
            <th></th>
        </tr>
        @foreach (var item in Model.CartItems)
        {
            <tr class="record" @item.RecordId>
                <td> @item.EventSelected.EventTitle</td>
                <td> &nbsp; &nbsp;@item.EventSelected.Tickets</td>
                <td> &nbsp; &nbsp;<a href="/ShoppingCart" data-id="@item.RecordId" class="RemoveLink">Remove</td>
            </tr>
        }

        @*<tr>
            <td colspan="2">Cart Total</td>
            <td class="cart-total">@Model.CartTotal</td>
            <td></td>
        </tr>*@

    </table>
    <p class="button">

        @Html.ActionLink("Back to Browse", "Home", "Events")
    </p>
</div>

@section scripts {

    <script src="~/Scripts/App/Scripts.js"></script>

}