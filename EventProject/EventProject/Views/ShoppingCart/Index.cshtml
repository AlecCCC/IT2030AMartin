@model EventProject.Models.ShoppingCartViewModel
@{
    ViewBag.Title = "Shopping Cart";
}

<h2>Index</h2>
<h2>Here is your shopping cart</h2>
<br />
<div id="update-message"></div>

<div>
    <table>
        <tr>
            <th>Event</th>
            <th>Number of Tickets</th>
            <th></th>
        </tr>
        @foreach (var item in Model.CartItems)
        {
            <tr class="record" @item.RecordId>
                <td>@item.EventSelected.EventTitle</td>
                <td>@item.EventSelected.AvailableTix</td>
                <td id="item-count" @item.RecordId>@item.Count</td>
                <td><a href="#" data-id="@item.RecordId" class="RemoveLink">Remove</a> </td>
            </tr>
        }


    </table>
    <p class=button"">

        @Html.ActionLink("Back to Browse", "Browse", "Store")
    </p>
</div>

@section scripts {

    <script src="~/Scripts/App/RemoveCart.js"></script>
}